pipeline {
    agent any

    stages {
        stage('run parallel') {
            parallel {
                stage('windows') {
                    agent {
                        label "SlaveWindows"
                    }
                    steps {
                        bat "echo ${System.getProperty(os.name)}"
                    }
                }
                stage('linux') {
                    agent {
                        label "unix"
                    }                
                    steps {
                        sh "echo ${System.getProperty(os.name)}"
                    }
                }
            }
        }
    }
}
